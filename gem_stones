#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main()
{
  int n,i,j,alpha[26]={0};//partial initialization all the rest automaticly 0
  char str[100];
  scanf("%d",&n);
  
  for(i=0;i<n;i++) //checks for the elements
  {
    scanf("%s",str);//need not store the string for we donot need it in futre comutation
    j=strlen(str);// so that time is not wasted repetedly on comuting length s it will not change
    while(--j>=0)
      if((alpha[str[j]-'a'])==i) //to exclude repetition if string has any; ELSE if condition not required
        alpha[str[j]-'a']++;
  }
  
  for(j=i=0;i<26;i++)
    if(alpha[i]==n)
      j++;
  printf("%d\n\n",j);
  return 0;
}
